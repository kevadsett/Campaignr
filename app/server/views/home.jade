mixin campaign(campaign)
    .campaign= campaign.name
        .owner.hidden= campaign.owner
        .playerList.hidden
            each player in campaign.players
                .player
                    .playerName= player.name
                    .playerFaction= player.faction
                    .playerPoints= player.points
                    .playerNotes= player.notes
        .planetList.hidden
            each planet in campaign.planets
                .planet
                    .planetName= planet.name
                    .territoryList
                        each territory in planet.territories
                            .territory
                                .territoryOwner= territory.owner
                                .territoryType= territory.type
                                .territoryNotes= territory.notes
                    .planetNotes= planet.notes